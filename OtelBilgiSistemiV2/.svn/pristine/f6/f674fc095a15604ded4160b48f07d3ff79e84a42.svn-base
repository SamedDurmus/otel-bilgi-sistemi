        }

        private void OdaDoldur()
        {
            new OdaIslemleri().OdaDoldurma(textBoxOdaNo.Text, textBoxAdı.Text, textBoxSoyadı.Text);
        }

        private void buttonKayıtAl_Click(object sender, EventArgs e)
        {
            MusteriKayıtEkle();
            OdaDoldur();
            OdaKontrol();

